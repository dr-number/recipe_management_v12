{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "recipe_management",
            "type": "python",
            "request": "attach",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/app",
                    "remoteRoot": "/home/app/web"
                }
            ], 
            "port": 3000,
            "host": "127.0.0.1"
        },
        {
            "name": "Jupiter notebook recipe_management",
            "type": "python",
            "request": "attach",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/app",
                    "remoteRoot": "/home/app/web"
                }
            ], 
            "port": 3005,
            "host": "127.0.0.1"
        },
        {
            "name": "Celery recipe_management",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 6900
            },
            "pathMappings": [{
                "localRoot": "${workspaceFolder}/app",
                "remoteRoot": "/home/app/web"
            }],
            // "preLaunchTask": "docker-compose up", 
            "django": true,
        },
        {
            "name": "Feedbackbot recipe_management",
            "type": "python",
            "request": "attach",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/app",
                    "remoteRoot": "/home/app/web"
                }
            ], 
            "port": 6800,
            "host": "127.0.0.1"
        },
    ]
}
